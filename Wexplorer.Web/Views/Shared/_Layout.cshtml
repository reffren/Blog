<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <meta name="google-site-verification" content="WCB9-EIyifeHneJydz-RNbD9z6kDkv590zJBVS3Lv-o" />
    <link rel="canonical" href="@ViewBag.Canonical"  />
    <link rel="publisher" href="https://plus.google.com/111393808876134963318" />
    <link href="@Url.Content("~/Content/images/favicon.ico")" rel="shortcut icon" type="image/x-icon" />
    <title>@ViewBag.Title</title>
    <meta name="description" content="@ViewBag.Description" />
 
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/hideUrl")
    @RenderSection("css", false)
    @RenderSection("Scripts", false)
</head>
<body>
<script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-60149736-1', 'auto');
  ga('send', 'pageview');
</script>
    <div class="top">
        <div class="all">
            <div class="header">
                <img src="~/Content/images/logo.jpg">
                <img class="author" src="~/Content/images/tim.jpg">
                <header class="blog_name" onclick="window.location='/'">
                    <h2>Блог Тимура Казанского</h2>
                </header>
                <div class="social">
                    <a href="https://plus.google.com/111393808876134963318" rel="author" target="_blank" title="Я в Google+"><img src="~/Content/social/google.png" alt="Google+"></a>
                    <a onclick="clean_https('_wexplorer.ru')"><img class="social_icons" src="~/Content/social/rss.png" alt="rss"></a>
                </div>
            </div>
            <div class="navigation">
                <nav itemscope itemtype="http://schema.org/SiteNavigationElement">
                    <ul class="menu_items">
                        <li itemprop="blogPosts">@Html.ActionLink("Главная", "Posts", "Blog")</li>
                        <li itemprop="articleSection">@Html.ActionLink("Список статей", "SiteMap", "Blog")</li>
                        <li itemprop="about">@Html.ActionLink("Об Авторе", "AboutMe", "Blog")</li>
                        <li itemprop="contactType">@Html.ActionLink("Контакты", "Contacts", "Blog")</li>
                    </ul>
                </nav>
            </div>
            <div class="content">
                @RenderBody()
            </div>
            @{Html.RenderAction("Subscription", "SideBar");}
            <div itemscope itemtype="http://schema.org/WPFooter" class="footer">
                <p>&copy; @DateTime.Now.Year - wexplorer.ru</p>
            </div>
        </div>
    </div>
</body>
</html>