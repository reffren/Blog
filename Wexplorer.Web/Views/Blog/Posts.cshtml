@model Wexplorer.Web.Models.PostsModel
@{
    if ((Int16) Model.PagingInfo.CurrentPage > 1) 
    {
        ViewBag.Canonical = "http://wexplorer.ru/page" + Model.PagingInfo.CurrentPage;
        ViewBag.Title = "Блог Тимура Казанского - страница " + Model.PagingInfo.CurrentPage + " из " + Model.PagingInfo.TotalPages;
    }
    else
    {
        ViewBag.Canonical = "http://wexplorer.ru/";
        ViewBag.Title = "Блог Тимура Казанского";
    }
    ViewBag.Description = "программирование, стартапы, путешествия и жизнь";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div itemscope itemtype="http://schema.org/Blog" class="posts">
    @Html.Partial("BlogPosts", Model.Posts)
    <div class="pages">
        @Html.PageLinks((Wexplorer.Web.Models.PagingInfo)Model.PagingInfo, x => Url.Action("Posts", new { page = x }))
    </div>
</div>

